<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ggktech.sangam" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".dashboard.ActivityDashboard"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".timesheet.ActivityTimeSheet"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/title_activity_time_sheet" >
        </activity>
        <activity
            android:name=".addtask.ActivityPendingTimeSheet"
            android:label="@string/title_activity_todays_time_sheet" >
        </activity>
        <activity
            android:name=".addtask.ActivityAddNewTask"
            android:label="@string/title_activity_activity_add_new_task"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".leave.ActivityAddLeave"
            android:label="@string/title_activity_activity_add_leave" >
        </activity>
        <activity
            android:name=".leave.ActivityLeaveDetails"
            android:label="@string/title_activity_activity_leave_details" >
        </activity>
    </application>

</manifest>
